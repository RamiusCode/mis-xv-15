    <!-- Contenido central -->
    <div class="max-w-xl mx-auto text-center relative z-10 px-16 md:px-24 lg:px-32">
      <!-- SECCI√ìN 1: MI MAM√Å -->
      <div id="seccion-mama">
        <h2 class="font-charm text-xl text-[#a27735] font-bold mb-1">
